<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<installer-gui-script minSpecVersion="2">
    <title>VMQemuVGA Enhanced Graphics Driver v3.0.0d1</title>
    <organization>com.vmware.kext</organization>
    <domains enable_anywhere="true" enable_currentUserHome="false" enable_localSystem="true"/>
    <options customize="never" require-scripts="false" rootVolumeOnly="true"/>
    <!-- Welcome Screen -->
    <welcome file="Welcome.txt" mime-type="text/plain"/>
    <!-- License Agreement -->
    <license file="License.txt" mime-type="text/plain"/>
    <!-- README Information -->
    <readme file="README.txt" mime-type="text/plain"/>
    
    <!-- Conditional Installation Based on macOS Version -->
    <choices-outline>
        <line choice="default">
            <line choice="com.vmware.kext.VMQemuVGA.legacy"/>
            <line choice="com.vmware.kext.VMQemuVGA.modern"/>
        </line>
    </choices-outline>
    
    <!-- Choice Definitions -->
    <choice id="default"/>
    
    <!-- Legacy macOS (10.10 and earlier) - Install to System/Library/Extensions -->
    <choice id="com.vmware.kext.VMQemuVGA.legacy" visible="false" selected="system.compareVersions(system.version.ProductVersion, '10.11') == -1">
        <pkg-ref id="com.vmware.kext.VMQemuVGA.legacy"/>
    </choice>
    
    <!-- Modern macOS (10.11+) - Install to Library/Extensions -->
    <choice id="com.vmware.kext.VMQemuVGA.modern" visible="false" selected="system.compareVersions(system.version.ProductVersion, '10.11') != -1">
        <pkg-ref id="com.vmware.kext.VMQemuVGA.modern"/>
    </choice>
    
    <!-- Package References -->
    <pkg-ref id="com.vmware.kext.VMQemuVGA.legacy" version="3.0.0d1" onConclusion="none" installKBytes="233" updateKBytes="0">#VMQemuVGA-Legacy.pkg</pkg-ref>
    <pkg-ref id="com.vmware.kext.VMQemuVGA.modern" version="3.0.0d1" onConclusion="none" installKBytes="233" updateKBytes="0">#VMQemuVGA-Modern.pkg</pkg-ref>
    
</installer-gui-script>
